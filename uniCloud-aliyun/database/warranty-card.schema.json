{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"create_time": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"name": {
			"bsonType": "string",
			"description": "名称"
		},
		"category": {
			"bsonType": "int",
			"description": "类别, 0=家电, 1=家具, 2=其他"
		},
		"duration": {
			"bsonType": "int",
			"description": "持续时间"
		}
	}
}
